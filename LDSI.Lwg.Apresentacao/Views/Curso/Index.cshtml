@model IEnumerable<Curso>

@{
    ViewData["Title"] = "Cursos";
}
<p>
    <a asp-action="Create">Criar novo curso</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Unidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unidade)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CursoId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.CursoId">Detalhar</a> |
                <a asp-action="Delete" asp-route-id="@item.CursoId">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
