@model LDSI.Lwg.Apresentacao.Models.Curso


<h4>Curso</h4>
<hr />

<div class="row mt-5">
    <div class="container col-md-5">
        
        <h3 class="mb-5">Tem certeza que deseja excluir?</h3>
        
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Unidade)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Unidade)
                </dd>
            </dl>

            <form class="mt-4" asp-action="Delete">
                <input type="hidden" asp-for="CursoId" />
                <input type="submit" value="Excluir" class="btn btn-danger" />
            </form>

        </div>        
    </div>    
</div>

<div class="mt-3">
    <a class="text-info" asp-action="Index">Voltar a lista.</a>
</div>


   

