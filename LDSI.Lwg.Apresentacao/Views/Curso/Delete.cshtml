@model LDSI.Lwg.Apresentacao.Models.Curso
@{Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="container col-md-10 mt-5">
    <h3>Curso</h3>
    <hr />

    <div class="row mt-5">
        <div class="container col-md-5">

            <h3 class="mb-5">Tem certeza que deseja excluir?</h3>

            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Unidade)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Unidade)
                    </dd>
                </dl>

                <form class="mt-4 text-center" asp-action="Delete">
                    <input type="hidden" asp-for="CursoId" />
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                    <a class="btn btn-danger" asp-action="Index">Voltar</a>
                </form>

            </div>
        </div>
    </div>
</div>



