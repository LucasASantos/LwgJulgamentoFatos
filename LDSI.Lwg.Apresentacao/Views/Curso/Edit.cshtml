@model LDSI.Lwg.Apresentacao.Models.Curso
@{Layout = "~/Views/Shared/_Layout.cshtml"; }

<div class="container col-md-10 mt-5">
    <h3>Curso</h3>
    <hr />
    <div class="row mt-5">
        <div class="container col-md-5">
            <h4 class="mb-5">Editar Curso</h4>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CursoId" />
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Unidade" class="control-label"></label>
                    <input asp-for="Unidade" class="form-control" />
                    <span asp-validation-for="Unidade" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Salvar" class="btn btn-warning" />
                    <a class="btn btn-warning" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>