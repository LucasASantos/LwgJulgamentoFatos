@model LDSI.Lwg.Apresentacao.Models.Disciplina

@{
    ViewData["Title"] = "Disciplinas";
}
<h4>Disciplina</h4>
<hr />
<div class="row mt-5">
    <div class="container col-md-5">

        <h3  class="mb-5">Tem certeza de que deseja excluir?</h3>

        <div>
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Curso)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Curso.CursoId)
                </dd class>
            </dl>
            
            <form asp-action="Delete">
                <input type="hidden" asp-for="DisciplinaId" />
