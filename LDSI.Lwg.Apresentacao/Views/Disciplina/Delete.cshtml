@model LDSI.Lwg.Apresentacao.Models.Disciplina

@{
    ViewData["Title"] = "Disciplinas";
}

<div class="container col-md-10 mt-5">
    <h3>Disciplina</h3>
    <hr />
    <div class="row mt-5">
        <div class="container col-md-5">

            <h3 class="mb-5">Tem certeza de que deseja excluir?</h3>

            <div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Nome)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Nome)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Curso)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Curso.CursoId)
                    </dd>
                </dl>

                <form asp-action="Delete" class="text-center mr-5">
                    <input type="hidden" asp-for="DisciplinaId" />
                    <input type="submit" value="Excluir" class="btn btn-danger" />
                    <a class="btn btn-danger" asp-action="Index">Voltar</a>
                </form>
            </div>
        </div>
    </div>
</div>