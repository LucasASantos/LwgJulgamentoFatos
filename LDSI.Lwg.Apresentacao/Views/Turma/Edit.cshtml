@model LDSI.Lwg.Apresentacao.Models.Turma

@{
    ViewData["Title"] = "Turmas";
}

<div class="container col-md-10 mt-5">
    <h3>Turma</h3>
    <hr />
    <div class="row mt-5">
        <div class="container col-md-5">
            <h4 class="mb-5">Editar Turma</h4>

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="TurmaId" />
                <div class="form-group">
                    <label asp-for="Codigo" class="control-label"></label>
                    <input asp-for="Codigo" class="form-control" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DisciplinaId" class="control-label"></label>
                    <select asp-for="DisciplinaId" class="form-control" asp-items="ViewBag.DisciplinaId"></select>
                    <span asp-validation-for="DisciplinaId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a class="text-info" asp-action="Index">Voltar a lista.</a>
    </div>

</div>