@model LDSI.Lwg.Apresentacao.Models.Turma

@{
    ViewData["Title"] = "Turmas";
}

<div class="container col-md-10 mt-5">
    <h3>Turma</h3>
    <hr />

    <div class="row mt-5">
        <div class="container col-md-5">

            <h3 class="mb-5">Tem certeza que deseja excluir?</h3>

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Codigo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Codigo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Disciplina)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Disciplina.DisciplinaId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Professor)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Professor.Id)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="TurmaId" />
                <input type="submit" value="Excluir" class="btn btn-danger" />
            </form>
        </div>
    </div>
    <div class="mt-3">
        <a class="text-info" asp-action="Index">Voltar a lista.</a>
    </div>
</div>