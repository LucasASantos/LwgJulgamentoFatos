@model LDSI.Lwg.Apresentacao.Models.Turma

@{
    ViewData["Title"] = "Turmas";
}

<div class="container col-md-10 mt-5">
    <h3>Turma</h3>
    <hr />
    <div class="row mt-5">
        <div class="container col-md-5">

            <div class="mb-5">
                <h4>Criar nova Turma</h4>
            </div>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Codigo" class="control-label"></label>
                    <input asp-for="Codigo" class="form-control" />
                    <span asp-validation-for="Codigo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DisciplinaId" class="control-label"></label>
                    <select asp-for="DisciplinaId" class="form-control" asp-items="ViewBag.DisciplinaId"></select>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                    <a class="btn btn-primary" asp-action="Index">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>