@model LDSI.Lwg.Apresentacao.Models.Turma

@{
    ViewData["Title"] = "Turmas";
}

<div class="container col-md-10 mt-5">
    <h3>Turma</h3>
    <hr />

    <div class="row mt-5">
        <div class="container col-md-5">

            <div class="mb-5">
                <h3>Detalhes da Turma</h3>
            </div>

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Codigo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Codigo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Disciplina)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Disciplina.DisciplinaId)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Professor)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Professor.Id)
                </dd>
            </dl>

            <div class="text-center mr-5">
                <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.TurmaId">Editar</a>
                <a class="btn btn-info" asp-action="Index">Voltar</a>
            </div>
        </div>
    </div>
</div>

