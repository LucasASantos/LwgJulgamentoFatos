@model LDSI.Lwg.Apresentacao.Models.Fato

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

<h4>Fato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FatoId" class="control-label"></label>
                <select asp-for="FatoId" class ="form-control" asp-items="ViewBag.FatoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Texto" class="control-label"></label>
                <input asp-for="Texto" class="form-control" />
                <span asp-validation-for="Texto" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Verdadeiro" /> @Html.DisplayNameFor(model => model.Verdadeiro)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Ordem" class="control-label"></label>
                <input asp-for="Ordem" class="form-control" />
                <span asp-validation-for="Ordem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topicos" class="control-label"></label>
                <input asp-for="Topicos" class="form-control" />
                <span asp-validation-for="Topicos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JulgamentoFatosId" class="control-label"></label>
                <input asp-for="JulgamentoFatosId" class="form-control" />
                <span asp-validation-for="JulgamentoFatosId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
